<%= form_with model: @event do |form| %>
  <% if @event.errors.any? %>
    <ul>
      <% @event.errors.full_message.each do |error| %>
        <li> <%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form.text_field :title, placeholder: "Event Title" %>
  <%= form.text_field :body, placeholder: "Event Description" %>
  <%= form.date_field :date, placeholder: "Event Date" %>
  <%= form.submit "Create" %>
<% end %>